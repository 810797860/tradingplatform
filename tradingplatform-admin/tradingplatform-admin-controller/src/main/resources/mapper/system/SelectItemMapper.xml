<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secondhand.tradingplatformadminmapper.mapper.system.SelectItemMapper">

    <cache type="com.secondhand.tradingplatformcommon.redisCache.RedisCache"></cache>

		<!-- 通用查询映射结果 -->
			<resultMap id="selectItemMap" type="com.secondhand.tradingplatformadminentity.entity.system.SelectItem" extends="com.secondhand.tradingplatformadminmapper.mapper.BaseEntityMapper.baseEntityMapper">
									
				<result column="title" property="title" jdbcType="VARCHAR" />
				<result column="pid" property="pid" jdbcType="INTEGER" />
				<result column="item_value" property="itemValue" jdbcType="VARCHAR" />
				<result column="sort" property="sort" jdbcType="INTEGER" />

		</resultMap>

        <!-- 通用查询映射结果 -->
		<resultMap id="selectItemMapSimple" type="com.secondhand.tradingplatformadminentity.entity.system.SelectItem">
																			
                        <result column="title" property="title" jdbcType="VARCHAR" />
                        <result column="pid" property="pid" jdbcType="INTEGER" />
                        <result column="item_value" property="itemValue" jdbcType="VARCHAR" />
                        <result column="sort" property="sort" jdbcType="INTEGER" />

        </resultMap>

    <select id="selectMapById" resultType="java.util.Map">
        select * from s_base_select_item where id = #{selectItemId} and deleted = false
    </select>

    <select id="myGetItemsByPid" resultMap="selectItemMap">
        select * from s_base_select_item where pid = #{pid} and deleted = false
    </select>

    <select id="myGetAllItemsByPid" resultMap="selectItemMap">
        SELECT * FROM s_base_select_item sbsi WHERE FIND_IN_SET( sbsi.id, (
        SELECT SUBSTRING( @pid FROM LOCATE(',', @pid) + 1 FOR LENGTH(@pid) ) AS pid FROM (
        SELECT u0.id, u0.pid, IF ( FIND_IN_SET(u0.pid ,@pid), @count := @count + 1, 0 ) AS total_childern,
        IF ( FIND_IN_SET(u0.pid ,@pid), @pid := CONCAT(@pid, ',', u0.id), 0 ) AS childern FROM (
        SELECT * FROM s_base_select_item bsi WHERE bsi.deleted = FALSE ORDER BY bsi.pid, bsi.id ) u0,
        ( SELECT @pid := 100101) u1,
        ( SELECT @count := 1) u2 ) u3 LIMIT 1 ) ) ORDER BY sbsi.sort DESC
    </select>
</mapper>