        </resultMap>

    <update id="fakeDeleteById">
        update s_base_role set deleted = true
        where id = #{roleId}
    </update>

    <update id="fakeBatchDelete" parameterType="java.util.List">
        update s_base_role set deleted = true
        where id IN
        <foreach collection="roleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>



</mapper>