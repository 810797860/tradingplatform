<mapper namespace="com.secondhand.tradingplatformadminmapper.mapper.shiro.MenuMapper">

    <cache type="com.secondhand.tradingplatformcommon.redisCache.RedisCache"></cache>

		<!-- 通用查询映射结果 -->
			<resultMap id="menuMap" type="com.secondhand.tradingplatformadminentity.entity.shiro.Menu" extends="com.secondhand.tradingplatformadminmapper.mapper.BaseEntityMapper.baseEntityMapper">
									
				<result column="name" property="name" jdbcType="VARCHAR" />
