		</resultMap>

        <!-- 通用查询映射结果 -->
		<resultMap id="menuMapSimple" type="com.secondhand.tradingplatformadminentity.entity.shiro.Menu">
																			
                        <result column="name" property="name" jdbcType="VARCHAR" />
